<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:elevation="10dp"
    android:background="@drawable/rounded_background_shadow"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/date_score"
            android:layout_width="match_parent"
            android:textSize="16dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Mar 10 juillet 2022" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_gravity="end"
                android:src="@drawable/cloud">

            </ImageView>

            <TextView
                android:id="@+id/co2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="20g"
                android:textColor="@color/colorPrimary"
                android:textSize="15dp"
                android:textStyle="bold">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/ll_start_score"
            android:layout_width="match_parent"
            android:gravity="start"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="17 rue du faubourg Saint-Denis (Paris)"
            />
    </LinearLayout>


    <View
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/ll_end_score"
            android:layout_width="match_parent"
            android:gravity="start"
            android:textSize="14dp"
            android:paddingLeft="15dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:text="11B Place de la Nation (Paris)"
            />
    </LinearLayout>




</LinearLayout>